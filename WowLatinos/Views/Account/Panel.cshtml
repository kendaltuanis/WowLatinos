                            <span class="input-group-addon">Usuario</span>
                            <input id="user" type="text" value='@ViewBag.Details[6]'  class="form-control" readonly>
                        </div><br />
                        @if (pass)
                        {
                                                        <div class="input-group">
                            <span class="input-group-addon">Contraseña</span>
                            <input id="pass" type="password"  class="form-control">
                            </div><br />
                            <script>document.getElementById("user").removeAttribute('readonly')</script>
                        }

                        <div class="input-group">
                            <span class="input-group-addon">Correo</span>
                            <input id="msg" type="email" value='@ViewBag.Details[7]' class="form-control" readonly>
                        </div><br />
                        <div>
                            @if (user || pass || email)
                        {
                            <button class="btn btn-danger full" type="submit">Editar</button>                            
